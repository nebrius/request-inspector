  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Example App",
      "program": "${workspaceFolder}/example/app.js",
      "outFiles": [
        "${workspaceFolder}/example/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Example Template",
      "program": "${workspaceFolder}/example/template-microservice.js",
      "outFiles": [
        "${workspaceFolder}/example/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Example Renderer",
      "program": "${workspaceFolder}/example/render-microservice.js",
